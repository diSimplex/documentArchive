<% Conf.paper.authors.each_pair do | authorInitials, author | %>
%% author: <%= authorInitials %>
\author{<%= author.name %>}
\address{<%= author.address %>}%
\email{<%= author.email %>}%
\urladdr{<%= author.url %>}

<% end %>

%% version summary
\thanks{Created: <%= Date.today %>}
\thanks{Git commit \gitReferences{} (\gitAbbrevHash{}) commited on \gitAuthorDate{} by \gitAuthorName{}}
\thanks{AMS-\LaTeX{}'ed on \today{}.}

%% Copyrights
<% Conf.paper.copyrights.each do | aCopyright | %>
\thanks{\textbf{<%= aCopyright %>}}
<% end %>

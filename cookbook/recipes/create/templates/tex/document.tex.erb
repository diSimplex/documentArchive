<% # The standard LaTeX document template for PerceptiSys papers %>
% LaTeX source for the <%= Conf.paper.name %> document
%

\InputIfFileExists{options}{}{}
\documentclass[<%= Conf.paper.document.options.join(',') %>]{<%= Conf.paper.document.type %>}
<% useFrontMatter = false %>
<% Conf.paper.document.packages.each_pair do | packageName, packageOpts | %>
<%   useFrontMatter = true if packageName =~ /[Cc]hapter/ %>
<%   if packageOpts.empty? then %>
\usepackage{<%= packageName %>}
<%   else %>
\usepackage[<%= packageOpts.join(',') %>]{<%= packageName %>}
<%   end %>
<% end %>

\begin{document}
<% if useFrontMatter then %>
\frontmatter
<% end %>
\sloppy

\title[A short title]{The full title}
\collectionTitle{The collection title}
\input{frontMatter}
\subjclass[2010]{Primary unknown; Secondary unknown} %
\keywords{Keyword one, keyword two etc.}%

\begin{abstract}
This is the abstract.
\end{abstract}
<% if Conf.paper.document.type !~ /book/ then %>
\maketitle
<% end %>
\tableofcontents
<% if useFrontMatter then %>
\mainmatter
<% end %>

\section{Introduction}

\bibliographystyle{amsalpha}
\bibliography{<%= Conf.paper.name %>}

\end{document}


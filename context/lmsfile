-- A Lua Make System file

require 'lms.litProgs'

lpTargets = litProgs.targets{
  mainDoc  = 'diSimp.tex',
  docFiles = {
    'overview.tex',
    'pageLayout.tex',
    'documentSetup.tex',
    'copyrights.tex',
    'mathEnunciations.tex',
    'diSimpMacros.tex',
    'preamble.tex',
    'conclusions.tex',
  },
  docDir    = 't-diSimp/doc/context/third/diSimp',
}

require 'lms.contextMod'

contextMod.targets(lpTargets, {
  moduleFiles = {
    't-diSimp.mkiv',
    't-diSimp.lua',
  },
  moduleDir = 't-diSimp/tex/context/third/diSimp',
})